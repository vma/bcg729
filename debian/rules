#!/usr/bin/make -f
# -*- makefile -*-

DH_VERBOSE = 1
DPKG_EXPORT_BUILDFLAGS = 1
include /usr/share/dpkg/default.mk

export DEB_BUILD_OPTIONS = "parallel"
export DEB_BUILD_MAINT_OPTIONS = hardening=-all,+format,+fortify,+stackprotector,+relro
#export DEB_CFLAGS_MAINT_APPEND = -g -O2 -fPIC

%:
	dh $@ --parallel \
		--with autotools-dev --with autoreconf \
		--buildsystem=autoconf

override_dh_auto_clean:
	touch ChangeLog README
	dh_auto_clean

override_dh_autoreconf:
	dh_autoreconf -- ./autogen.sh

override_dh_auto_configure:
	dh_auto_configure -- --enable-static --enable-shared

override_dh_auto_install:
	dh_auto_install --destdir=debian/tmp

override_dh_strip:
	dh_strip -plibbcg729-0 --dbg-package=libbcg729-0-dbg
